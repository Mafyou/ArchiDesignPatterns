<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ArchiDesignPatterns.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ArchiDesignPatterns.Mobile"
    xmlns:pages="clr-namespace:DesignPatterns.Mobile.Pages"
    Title="ArchiDesignPatterns.Mobile">

    <TabBar>
        <ShellContent Title="Accueil" 
          ContentTemplate="{DataTemplate local:MainPage}" 
          Route="MainPage" />
        <ShellContent Title="Design Patterns" 
          ContentTemplate="{DataTemplate pages:DesignPatternsPage}" 
          Route="DesignPatternsPage" />
    </TabBar>

</Shell>
