        <ShellContent Title="  Hexagonal Architecture" ContentTemplate="{DataTemplate arch:HexagonalArchitecturePage}" Route="HexagonalArchitecturePage" />
        <ShellContent Title="  Microservices" ContentTemplate="{DataTemplate arch:MicroservicesArchitecturePage}" Route="MicroservicesArchitecturePage" />
        <ShellContent Title="  Event-Driven" ContentTemplate="{DataTemplate arch:EventDrivenArchitecturePage}" Route="EventDrivenArchitecturePage" />
        <ShellContent Title="  CQRS" ContentTemplate="{DataTemplate arch:CQRSArchitecturePage}" Route="CQRSArchitecturePage" />
        <ShellContent Title="  Onion Architecture" ContentTemplate="{DataTemplate arch:OnionArchitecturePage}" Route="OnionArchitecturePage" />
        <ShellContent Title="  DDD" ContentTemplate="{DataTemplate arch:DDDArchitecturePage}" Route="DDDArchitecturePage" />
    </FlyoutItem>

    <FlyoutItem Title="ðŸ”· Tous les Principes SOLID" Route="SOLIDPrinciplesPage">
        <ShellContent ContentTemplate="{DataTemplate pages:SOLIDPrinciplesPage}" />
    </FlyoutItem>

    <!-- SOLID Principles -->
    <FlyoutItem Title="Principes SOLID" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="  Single Responsibility" ContentTemplate="{DataTemplate solid:SingleResponsibilityPrinciplePage}" Route="SingleResponsibilityPrinciplePage" />
        <ShellContent Title="  Open/Closed" ContentTemplate="{DataTemplate solid:OpenClosedPrinciplePage}" Route="OpenClosedPrinciplePage" />
        <ShellContent Title="  Liskov Substitution" ContentTemplate="{DataTemplate solid:LiskovSubstitutionPrinciplePage}" Route="LiskovSubstitutionPrinciplePage" />
        <ShellContent Title="  Interface Segregation" ContentTemplate="{DataTemplate solid:InterfaceSegregationPrinciplePage}" Route="InterfaceSegregationPrinciplePage" />
        <ShellContent Title="  Dependency Inversion" ContentTemplate="{DataTemplate solid:DependencyInversionPrinciplePage}" Route="DependencyInversionPrinciplePage" />
    </FlyoutItem>

    <FlyoutItem Title="ðŸŽ¯ Quiz" Route="QuizPage">
        <ShellContent ContentTemplate="{DataTemplate pages:QuizPage}" />
    </FlyoutItem>

</Shell>