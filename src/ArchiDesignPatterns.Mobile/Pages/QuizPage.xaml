<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ArchiDesignPatterns.Mobile.ViewModels"
             xmlns:resx="clr-namespace:ArchiDesignPatterns.Mobile.Resources"
             x:Class="ArchiDesignPatterns.Mobile.Pages.QuizPage"
             x:DataType="viewmodels:QuizViewModel"
             Title="{x:Static resx:Strings.QuizPage_Title}">
    
    <Grid RowDefinitions="Auto,*">
        
        <!-- Header Section -->
        <Border Grid.Row="0"
                Background="{StaticResource SuccessGradient}"
                Padding="20,24,20,20"
                StrokeThickness="0">
            <VerticalStackLayout Spacing="8">
                <HorizontalStackLayout Spacing="12">
                    <Label Text="ðŸŽ¯" FontSize="32" VerticalOptions="Center" />
                    <VerticalStackLayout Spacing="4">
                        <Label Text="{x:Static resx:Strings.QuizPage_Title}"
                               FontSize="28"
                               FontAttributes="Bold"
                               TextColor="White"
                               SemanticProperties.HeadingLevel="Level1" />
                        <Label Text="{x:Static resx:Strings.QuizPage_Tagline}"
                               FontSize="14"
                               TextColor="White"
                               Opacity="0.9" />
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Border>

        <!-- Quiz Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="24">

                <!-- Topic Selection Card -->
                <Border Style="{StaticResource ElevatedCard}">
                    <VerticalStackLayout Spacing="16">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="ðŸ“š" FontSize="20" VerticalOptions="Center" />
                            <Label Text="{x:Static resx:Strings.QuizPage_TopicSelectionTitle}"
                                   Style="{StaticResource SubTitle}"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>
                        
                        <BoxView Style="{StaticResource Divider}" Margin="0,0" />
                        
                        <VerticalStackLayout Spacing="8">
                            <Label Text="{x:Static resx:Strings.QuizPage_TopicInputLabel}"
                                   Style="{StaticResource BodyMedium}"
                                   TextColor="{StaticResource Gray600}" />
                            <Entry Keyboard="Chat"
                                   Placeholder="{x:Static resx:Strings.QuizPage_TopicInputPlaceholder}"
                                   Text="{Binding Topic}"
                                   HeightRequest="50" />
                        </VerticalStackLayout>
                        
                        <Button Text="{x:Static resx:Strings.QuizPage_GenerateButton}"
                                Command="{Binding GenerateCommand}"
                                HorizontalOptions="Fill" />
                    </VerticalStackLayout>
                </Border>

                <!-- Example Topics Card -->
                <Border BackgroundColor="{AppThemeBinding Light={StaticResource Gray50}, Dark={StaticResource Gray800}}"
                        Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}"
                        StrokeThickness="1"
                        Padding="16"
                        StrokeShape="RoundRectangle 12">
                    <VerticalStackLayout Spacing="12">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="ðŸ’¡" FontSize="16" VerticalOptions="Center" />
                            <Label Text="{x:Static resx:Strings.QuizPage_QuickTopicsTitle}"
                                   FontSize="14" FontAttributes="Bold"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>
                        
                        <FlexLayout Wrap="Wrap" JustifyContent="Start"
                                   AlignItems="Start">
                            <Border BackgroundColor="{StaticResource CreationalPattern}"
                                    Padding="10,6" Margin="4"
                                    StrokeThickness="0"
                                    StrokeShape="RoundRectangle 8">
                                <Label Text="Singleton" FontSize="12"
                                       FontAttributes="Bold" TextColor="White" />
                            </Border>
                            <Border BackgroundColor="{StaticResource StructuralPattern}"
                                    Padding="10,6" Margin="4"
                                    StrokeThickness="0"
                                    StrokeShape="RoundRectangle 8">
                                <Label Text="Adapter" FontSize="12"
                                       FontAttributes="Bold" TextColor="White" />
                            </Border>
                            <Border BackgroundColor="{StaticResource BehavioralPattern}"
                                    Padding="10,6" Margin="4"
                                    StrokeThickness="0"
                                    StrokeShape="RoundRectangle 8">
                                <Label Text="Observer" FontSize="12"
                                       FontAttributes="Bold" TextColor="White" />
                            </Border>
                            <Border BackgroundColor="{StaticResource ArchitecturePattern}"
                                    Padding="10,6" Margin="4"
                                    StrokeThickness="0"
                                    StrokeShape="RoundRectangle 8">
                                <Label Text="Clean" FontSize="12"
                                       FontAttributes="Bold" TextColor="White" />
                            </Border>
                            <Border BackgroundColor="{StaticResource ArchitecturePattern}"
                                    Padding="10,6" Margin="4"
                                    StrokeThickness="0"
                                    StrokeShape="RoundRectangle 8">
                                <Label Text="MVC" FontSize="12"
                                       FontAttributes="Bold" TextColor="White" />
                            </Border>
                        </FlexLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Question Card -->
                <Border Style="{StaticResource InteractiveSection}">
                    <VerticalStackLayout Spacing="16">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="â“" FontSize="24" VerticalOptions="Center" />
                            <Label Text="{x:Static resx:Strings.QuizPage_QuestionTitle}"
                                   Style="{StaticResource Title}"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>
                        
                        <BoxView Style="{StaticResource Divider}" Margin="0,0" />
                        
                        <Label Text="{Binding Question}"
                               Style="{StaticResource BodyLarge}"
                               FontAttributes="Bold"
                               LineBreakMode="WordWrap"
                               MinimumHeightRequest="60" />
                        
                        <VerticalStackLayout Spacing="12">
                            <Label Text="{x:Static resx:Strings.QuizPage_YourAnswerLabel}"
                                   Style="{StaticResource BodyMedium}"
                                   TextColor="{StaticResource Gray600}" />
                            <Entry Keyboard="Chat"
                                   Placeholder="{x:Static resx:Strings.QuizPage_AnswerPlaceholder}"
                                   Text="{Binding Answer}"
                                   HeightRequest="50"
                                   MaxLength="1" />
                        </VerticalStackLayout>
                        
                        <Button Text="{x:Static resx:Strings.QuizPage_SubmitButton}"
                                Command="{Binding EvaluateCommand}"
                                BackgroundColor="{StaticResource Success}"
                                HorizontalOptions="Fill" />
                        
                        <!-- Result Section -->
                        <Border BackgroundColor="{AppThemeBinding Light={StaticResource Gray50}, Dark={StaticResource Gray900}}"
                                Padding="16"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 12"
                                IsVisible="{Binding Result, Converter={StaticResource StringToBoolConverter}}">
                            <VerticalStackLayout Spacing="8">
                                <HorizontalStackLayout Spacing="8">
                                    <Label Text="ðŸ“Š" FontSize="20" VerticalOptions="Center" />
                                    <Label Text="{x:Static resx:Strings.QuizPage_ResultTitle}"
                                           FontSize="16" FontAttributes="Bold"
                                           VerticalOptions="Center" />
                                </HorizontalStackLayout>
                                <Label Text="{Binding Result}"
                                       Style="{StaticResource BodyMedium}"
                                       LineBreakMode="WordWrap" />
                            </VerticalStackLayout>
                        </Border>
                    </VerticalStackLayout>
                </Border>

                <!-- Tips Card -->
                <Border BackgroundColor="{AppThemeBinding Light=#FFFBEB, Dark=#78350F}"
                        Stroke="{StaticResource Warning}"
                        StrokeThickness="1"
                        Padding="16"
                        StrokeShape="RoundRectangle 12">
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                        <Label Text="ðŸ’¡" FontSize="24" VerticalOptions="Start" />
                        <VerticalStackLayout Grid.Column="1" Spacing="8">
                            <Label Text="{x:Static resx:Strings.QuizPage_TipsTitle}"
                                   FontSize="14" FontAttributes="Bold" />
                            <Label Text="{x:Static resx:Strings.QuizPage_TipsContent}"
                                   Style="{StaticResource BodySmall}"
                                   LineBreakMode="WordWrap" />
                        </VerticalStackLayout>
                    </Grid>
                </Border>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>