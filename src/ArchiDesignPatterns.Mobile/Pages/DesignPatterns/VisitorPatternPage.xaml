<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ArchiDesignPatterns.Mobile.ViewModels"
             xmlns:resx="clr-namespace:ArchiDesignPatterns.Mobile.Resources"
             x:Class="ArchiDesignPatterns.Mobile.Pages.DesignPatterns.VisitorPatternPage"
             x:DataType="viewmodels:VisitorPatternViewModel"
             Title="{x:Static resx:Strings.VisitorPattern_Title}">
    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Border Grid.Row="0"
                BackgroundColor="{StaticResource BehavioralPattern}"
                Padding="20,24,20,20"
                StrokeThickness="0">
            <VerticalStackLayout Spacing="8">
                <HorizontalStackLayout Spacing="12">
                    <Label Text="ðŸ‘ï¸" FontSize="32" VerticalOptions="Center" />
                    <VerticalStackLayout Spacing="4">
                        <Label Text="{x:Static resx:Strings.VisitorPattern_Title}"
                               FontSize="28" FontAttributes="Bold"
                               TextColor="White" />
                        <Border BackgroundColor="White" Opacity="0.3"
                                Padding="8,4" StrokeThickness="0"
                                StrokeShape="RoundRectangle 6"
                                HorizontalOptions="Start">
                            <Label Text="{x:Static resx:Strings.ChainOfResponsibilityPattern_Behavioral}" FontSize="11"
                                   FontAttributes="Bold" TextColor="White" />
                        </Border>
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Border>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Style="{StaticResource PatternDetailContainer}">
                
                <!-- Description Card -->
                <Border Style="{StaticResource ElevatedCard}">
                    <VerticalStackLayout Spacing="12">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="ðŸ“–" FontSize="20" />
                            <Label Text="{x:Static resx:Strings.SingletonPattern_DescriptionTitle}" Style="{StaticResource SubTitle}" />
                        </HorizontalStackLayout>
                        <BoxView Style="{StaticResource Divider}" Margin="0,0" />
                        <Label Text="{x:Static resx:Strings.VisitorPattern_Description}"
                               Style="{StaticResource BodyLarge}" LineBreakMode="WordWrap" />
                    </VerticalStackLayout>
                </Border>

                <!-- When to Use -->
                <Border Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="12">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="ðŸŽ¯" FontSize="20" />
                            <Label Text="{x:Static resx:Strings.SingletonPattern_WhenToUseTitle}"
                               Style="{StaticResource SubTitle}" />
                        </HorizontalStackLayout>
                        <BoxView Style="{StaticResource Divider}" Margin="0,0" />
                        <VerticalStackLayout Spacing="8">
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                <Label Text="âœ“" FontSize="18" TextColor="{StaticResource Success}" />
                                <Label Grid.Column="1" Text="{x:Static resx:Strings.VisitorPattern_WhenToUse1}"
                                       Style="{StaticResource BodyMedium}" LineBreakMode="WordWrap" />
                            </Grid>
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                <Label Text="âœ“" FontSize="18" TextColor="{StaticResource Success}" />
                                <Label Grid.Column="1" Text="{x:Static resx:Strings.VisitorPattern_WhenToUse2}"
                                       Style="{StaticResource BodyMedium}" LineBreakMode="WordWrap" />
                            </Grid>
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                <Label Text="âœ“" FontSize="18" TextColor="{StaticResource Success}" />
                                <Label Grid.Column="1" Text="{x:Static resx:Strings.VisitorPattern_WhenToUse3}"
                                       Style="{StaticResource BodyMedium}" LineBreakMode="WordWrap" />
                            </Grid>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Interactive Example -->
                <Border Style="{StaticResource InteractiveSection}">
                    <VerticalStackLayout Spacing="16">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="ðŸŽ®" FontSize="20" VerticalOptions="Center" />
                            <Label Text="{x:Static resx:Strings.SingletonPattern_InteractiveTitle}"
                                   Style="{StaticResource SubTitle}"
                                   TextColor="{StaticResource Primary}"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>
                        <BoxView Style="{StaticResource Divider}" Margin="0,0" />
                        <Label Text="{x:Static resx:Strings.VisitorPattern_InteractiveDesc}"
                               Style="{StaticResource BodyMedium}" />
                        <Button Text="{x:Static resx:Strings.VisitorPattern_InteractiveButton}" 
                                Clicked="OnAcceptVisitorClicked" 
                                HorizontalOptions="Fill" />
                        <Label x:Name="ResultLabel" 
                               Style="{StaticResource ResultLabel}" 
                               LineBreakMode="WordWrap" />
                    </VerticalStackLayout>
                </Border>

                <!-- Code Example -->
                <Border Style="{StaticResource CodeSection}">
                    <VerticalStackLayout Spacing="12">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="ðŸ’»" FontSize="20" />
                            <Label Text="{x:Static resx:Strings.SingletonPattern_CodeTitle}" Style="{StaticResource SubTitle}" />
                        </HorizontalStackLayout>
                        <BoxView Style="{StaticResource Divider}" Margin="0,0" />
                        <Editor Style="{StaticResource CodeEditor}"
                                Text="// Interface Visitor&#x0a;public interface IVisitor&#x0a;{&#x0a;    string VisitElementA(ElementA element);&#x0a;    string VisitElementB(ElementB element);&#x0a;}&#x0a;&#x0a;// Interface Element&#x0a;public interface IElement&#x0a;{&#x0a;    string Accept(IVisitor visitor);&#x0a;}&#x0a;&#x0a;// Ã‰lÃ©ments concrets&#x0a;public class ElementA : IElement&#x0a;{&#x0a;    public string Accept(IVisitor visitor) =&gt; visitor.VisitElementA(this);&#x0a;}&#x0a;&#x0a;public class ElementB : IElement&#x0a;{&#x0a;    public string Accept(IVisitor visitor) =&gt; visitor.VisitElementB(this);&#x0a;}&#x0a;&#x0a;// Visitor concret&#x0a;public class ConcreteVisitor : IVisitor&#x0a;{&#x0a;    public string VisitElementA(ElementA element) =&gt; &quot;Visite A&quot;;&#x0a;    public string VisitElementB(ElementB element) =&gt; &quot;Visite B&quot;;&#x0a;}" />
                    </VerticalStackLayout>
                </Border>

                <!-- Real-World Example -->
                <Border BackgroundColor="{AppThemeBinding Light=#FFFBEB, Dark=#78350F}"
                        Stroke="{StaticResource Warning}"
                        StrokeThickness="1"
                        Padding="16"
                        StrokeShape="RoundRectangle 12">
                    <VerticalStackLayout Spacing="8">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="ðŸŒ" FontSize="20" />
                            <Label Text="{x:Static resx:Strings.AbstractFactoryPattern_RealWorldTitle}"
                                   FontAttributes="Bold"
                                   Style="{StaticResource BodyLarge}" />
                        </HorizontalStackLayout>
                        <Label Text="{x:Static resx:Strings.VisitorPattern_RealWorldDesc}"
                               Style="{StaticResource BodyMedium}"
                               LineBreakMode="WordWrap" />
                    </VerticalStackLayout>
                </Border>

                <!-- Pros and Cons -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                    <!-- Pros -->
                    <Border Style="{StaticResource ProCard}">
                        <VerticalStackLayout Spacing="12">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="âœ…" FontSize="20" />
                                <Label Text="{x:Static resx:Strings.SingletonPattern_ProsTitle}" FontAttributes="Bold"
                                       Style="{StaticResource BodyLarge}" />
                            </HorizontalStackLayout>
                            <VerticalStackLayout Spacing="6">
                                <Label Text="{x:Static resx:Strings.VisitorPattern_Pros1}"
                                       Style="{StaticResource BodySmall}" />
                                <Label Text="{x:Static resx:Strings.VisitorPattern_Pros2}"
                                       Style="{StaticResource BodySmall}" />
                                <Label Text="{x:Static resx:Strings.VisitorPattern_Pros3}"
                                       Style="{StaticResource BodySmall}" />
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </Border>
                    
                    <!-- Cons -->
                    <Border Style="{StaticResource ConCard}">
                        <VerticalStackLayout Spacing="12">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="âš ï¸" FontSize="20" />
                                <Label Text="{x:Static resx:Strings.SingletonPattern_ConsTitle}" FontAttributes="Bold"
                                       Style="{StaticResource BodyLarge}" />
                            </HorizontalStackLayout>
                            <VerticalStackLayout Spacing="6">
                                <Label Text="{x:Static resx:Strings.VisitorPattern_Cons1}"
                                       Style="{StaticResource BodySmall}" />
                                <Label Text="{x:Static resx:Strings.VisitorPattern_Cons2}"
                                       Style="{StaticResource BodySmall}" />
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </Border>
                </Grid>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
