<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ArchiDesignPatterns.Mobile.ViewModels"
             xmlns:resx="clr-namespace:ArchiDesignPatterns.Mobile.Resources"
             x:Class="ArchiDesignPatterns.Mobile.Pages.DesignPatterns.InterpreterPatternPage"
             x:DataType="viewmodels:InterpreterPatternViewModel"
             Title="{x:Static resx:Strings.InterpreterPattern_Title}">
    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Border Grid.Row="0"
                BackgroundColor="{StaticResource BehavioralPattern}"
                Padding="20,24,20,20"
                StrokeThickness="0">
            <VerticalStackLayout Spacing="8">
                <HorizontalStackLayout Spacing="12">
                    <Label Text="ðŸ”¤" FontSize="32" VerticalOptions="Center" />
                    <VerticalStackLayout Spacing="4">
                        <Label Text="{x:Static resx:Strings.InterpreterPattern_Title}"
                               FontSize="28" FontAttributes="Bold"
                               TextColor="White" />
                        <Border BackgroundColor="White" Opacity="0.3"
                                Padding="8,4" StrokeThickness="0"
                                StrokeShape="RoundRectangle 6"
                                HorizontalOptions="Start">
                            <Label Text="{x:Static resx:Strings.ChainOfResponsibilityPattern_Behavioral}" FontSize="11"
                                   FontAttributes="Bold" TextColor="White" />
                        </Border>
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Border>
        <!-- Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Style="{StaticResource PatternDetailContainer}">
                
                <!-- Description Card -->
                <Border Style="{StaticResource ElevatedCard}">
                    <VerticalStackLayout Spacing="12">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="ðŸ“–" FontSize="20" />
                            <Label Text="{x:Static resx:Strings.SingletonPattern_DescriptionTitle}"
                               Style="{StaticResource SubTitle}" />
                        </HorizontalStackLayout>
                        <BoxView Style="{StaticResource Divider}" Margin="0,0" />
                        <Label Text="{x:Static resx:Strings.InterpreterPattern_Description}"
                               Style="{StaticResource BodyLarge}"
                               LineBreakMode="WordWrap" />
                    </VerticalStackLayout>
                </Border>

                <!-- When to Use -->
                <Border Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="12">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="ðŸŽ¯" FontSize="20" />
                            <Label Text="{x:Static resx:Strings.SingletonPattern_WhenToUseTitle}"
                               Style="{StaticResource SubTitle}" />
                        </HorizontalStackLayout>
                        <BoxView Style="{StaticResource Divider}" Margin="0,0" />
                        <VerticalStackLayout Spacing="8">
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                <Label Text="âœ“" FontSize="18" TextColor="{StaticResource Success}" />
                                <Label Grid.Column="1" Text="{x:Static resx:Strings.InterpreterPattern_WhenToUse1}"
                                       Style="{StaticResource BodyMedium}" LineBreakMode="WordWrap" />
                            </Grid>
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                <Label Text="âœ“" FontSize="18" TextColor="{StaticResource Success}" />
                                <Label Grid.Column="1" Text="{x:Static resx:Strings.InterpreterPattern_WhenToUse2}"
                                       Style="{StaticResource BodyMedium}" LineBreakMode="WordWrap" />
                            </Grid>
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                <Label Text="âœ“" FontSize="18" TextColor="{StaticResource Success}" />
                                <Label Grid.Column="1" Text="{x:Static resx:Strings.InterpreterPattern_WhenToUse3}"
                                       Style="{StaticResource BodyMedium}" LineBreakMode="WordWrap" />
                            </Grid>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Interactive Example -->
                <Border Style="{StaticResource InteractiveSection}">
                    <VerticalStackLayout Spacing="16">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="ðŸŽ®" FontSize="20" VerticalOptions="Center" />
                            <Label Text="{x:Static resx:Strings.SingletonPattern_InteractiveTitle}"
                                   Style="{StaticResource SubTitle}"
                                   TextColor="{StaticResource Primary}"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>
                        <BoxView Style="{StaticResource Divider}" Margin="0,0" />
                        <Label Text="{x:Static resx:Strings.InterpreterPattern_InteractiveDesc}"
                               Style="{StaticResource BodyMedium}" />
                        <Button Text="{x:Static resx:Strings.InterpreterPattern_InteractiveButton}"
                                Clicked="OnInterpretClicked"
                                HorizontalOptions="Fill" />
                        <Label x:Name="ResultLabel"
                               Style="{StaticResource ResultLabel}"
                               LineBreakMode="WordWrap" />
                    </VerticalStackLayout>
                </Border>

                <!-- Code Example -->
                <Border Style="{StaticResource CodeSection}">
                    <VerticalStackLayout Spacing="12">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="ðŸ’»" FontSize="20" />
                            <Label Text="{x:Static resx:Strings.SingletonPattern_CodeTitle}"
                                   Style="{StaticResource SubTitle}" />
                        </HorizontalStackLayout>
                        <BoxView Style="{StaticResource Divider}" Margin="0,0" />
                        <Editor Style="{StaticResource CodeEditor}"
                                Text="// Interface Expression&#x0a;public interface IExpression&#x0a;{&#x0a;    int Interpret();&#x0a;}&#x0a;&#x0a;// Expression terminale&#x0a;public class Number : IExpression&#x0a;{&#x0a;    private readonly int _value;&#x0a;    public Number(int value) =&gt; _value = value;&#x0a;    public int Interpret() =&gt; _value;&#x0a;}&#x0a;&#x0a;// Expression non-terminale (Addition)&#x0a;public class Add : IExpression&#x0a;{&#x0a;    private readonly IExpression _left;&#x0a;    private readonly IExpression _right;&#x0a;&#x0a;    public Add(IExpression left, IExpression right)&#x0a;    {&#x0a;        _left = left;&#x0a;        _right = right;&#x0a;    }&#x0a;&#x0a;    public int Interpret() =&gt; _left.Interpret() + _right.Interpret();&#x0a;}&#x0a;&#x0a;// Utilisation: &quot;1 + 2&quot;&#x0a;var expression = new Add(new Number(1), new Number(2));&#x0a;var result = expression.Interpret(); // 3" />
                    </VerticalStackLayout>
                </Border>

                <!-- Pros and Cons -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                    <!-- Pros -->
                    <Border Style="{StaticResource ProCard}">
                        <VerticalStackLayout Spacing="12">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="âœ…" FontSize="20" />
                                <Label Text="{x:Static resx:Strings.SingletonPattern_ProsTitle}" FontAttributes="Bold"
                                       Style="{StaticResource BodyLarge}" />
                            </HorizontalStackLayout>
                            <VerticalStackLayout Spacing="6">
                                <Label Text="{x:Static resx:Strings.InterpreterPattern_Pros1}"
                                       Style="{StaticResource BodySmall}" />
                                <Label Text="{x:Static resx:Strings.InterpreterPattern_Pros2}"
                                       Style="{StaticResource BodySmall}" />
                                <Label Text="{x:Static resx:Strings.InterpreterPattern_Pros3}"
                                       Style="{StaticResource BodySmall}" />
                                <Label Text="{x:Static resx:Strings.InterpreterPattern_Pros4}"
                                       Style="{StaticResource BodySmall}" />
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </Border>
                    
                    <!-- Cons -->
                    <Border Style="{StaticResource ConCard}">
                        <VerticalStackLayout Spacing="12">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="âš ï¸" FontSize="20" />
                                <Label Text="{x:Static resx:Strings.SingletonPattern_ConsTitle}" FontAttributes="Bold"
                                       Style="{StaticResource BodyLarge}" />
                            </HorizontalStackLayout>
                            <VerticalStackLayout Spacing="6">
                                <Label Text="{x:Static resx:Strings.InterpreterPattern_Cons1}"
                                       Style="{StaticResource BodySmall}" />
                                <Label Text="{x:Static resx:Strings.InterpreterPattern_Cons2}"
                                       Style="{StaticResource BodySmall}" />
                                <Label Text="{x:Static resx:Strings.InterpreterPattern_Cons3}"
                                       Style="{StaticResource BodySmall}" />
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </Border>
                </Grid>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>