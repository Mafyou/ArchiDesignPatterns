                               TextColor="White" />
                        <Border BackgroundColor="White" Opacity="0.3"
                                Padding="8,4" StrokeThickness="0"
                                StrokeShape="RoundRectangle 6"
                                HorizontalOptions="Start">
                            <Label Text="{x:Static resx:Strings.ChainOfResponsibilityPattern_Behavioral}" FontSize="11"
                                   FontAttributes="Bold" TextColor="White" />
                        </Border>
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Border>
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Style="{StaticResource PatternDetailContainer}">
                
                <!-- Description Card -->
                <Border Style="{StaticResource ElevatedCard}">
                    <VerticalStackLayout Spacing="12">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="ðŸ“–" FontSize="20" />
                            <Label Text="{x:Static resx:Strings.SingletonPattern_DescriptionTitle}" Style="{StaticResource SubTitle}" />
                        </HorizontalStackLayout>
                        <BoxView Style="{StaticResource Divider}" Margin="0,0" />
                        <Label Text="{x:Static resx:Strings.StrategyPattern_Description}"
                               Style="{StaticResource BodyLarge}" LineBreakMode="WordWrap" />
                    </VerticalStackLayout>
                </Border>

                <!-- When to Use -->
                <Border Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="12">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="ðŸŽ¯" FontSize="20" />
                            <Label Text="{x:Static resx:Strings.SingletonPattern_WhenToUseTitle}"
                               Style="{StaticResource SubTitle}" />
                        </HorizontalStackLayout>
                        <BoxView Style="{StaticResource Divider}" Margin="0,0" />
                        <VerticalStackLayout Spacing="8">
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                <Label Text="âœ“" FontSize="18" TextColor="{StaticResource Success}" />
                                <Label Grid.Column="1" Text="{x:Static resx:Strings.StrategyPattern_WhenToUse1}"
                                       Style="{StaticResource BodyMedium}" LineBreakMode="WordWrap" />
                            </Grid>
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                <Label Text="âœ“" FontSize="18" TextColor="{StaticResource Success}" />
                                <Label Grid.Column="1" Text="{x:Static resx:Strings.StrategyPattern_WhenToUse2}"
                                       Style="{StaticResource BodyMedium}" LineBreakMode="WordWrap" />
                            </Grid>
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                <Label Text="âœ“" FontSize="18" TextColor="{StaticResource Success}" />
                                <Label Grid.Column="1" Text="{x:Static resx:Strings.StrategyPattern_WhenToUse3}"
                                       Style="{StaticResource BodyMedium}" LineBreakMode="WordWrap" />
                            </Grid>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Interactive Example -->
                <Border Style="{StaticResource InteractiveSection}">
                    <VerticalStackLayout Spacing="16">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="ðŸŽ®" FontSize="20" VerticalOptions="Center" />
                            <Label Text="{x:Static resx:Strings.SingletonPattern_InteractiveTitle}"
                                   Style="{StaticResource SubTitle}"
                                   TextColor="{StaticResource Primary}"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>
                        <BoxView Style="{StaticResource Divider}" Margin="0,0" />
                        <Label Text="{x:Static resx:Strings.StrategyPattern_InteractiveDesc}"
                               Style="{StaticResource BodyMedium}" />
                        <Picker ItemsSource="{Binding Strategies}" 
                                SelectedItem="{Binding SelectedStrategy}"
                                HorizontalOptions="Fill" />
                        <Button Text="{x:Static resx:Strings.StrategyPattern_InteractiveButton}" 
                                Command="{Binding ExecuteStrategyCommand}" 
                                HorizontalOptions="Fill" />
                        <Label Text="{Binding Result}" 
                               Style="{StaticResource ResultLabel}" 
                               LineBreakMode="WordWrap" />
                    </VerticalStackLayout>
                </Border>

                <!-- Code Example -->
                <Border Style="{StaticResource CodeSection}">
                    <VerticalStackLayout Spacing="12">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="ðŸ’»" FontSize="20" />
                            <Label Text="{x:Static resx:Strings.SingletonPattern_CodeTitle}" Style="{StaticResource SubTitle}" />
                        </HorizontalStackLayout>
                        <BoxView Style="{StaticResource Divider}" Margin="0,0" />
                        <Editor Style="{StaticResource CodeEditor}"
                                Text="// Interface Strategy&#x0a;public interface IStrategy&#x0a;{&#x0a;    string Execute();&#x0a;}&#x0a;&#x0a;// StratÃ©gies concrÃ¨tes&#x0a;public class ConcreteStrategyA : IStrategy&#x0a;{&#x0a;    public string Execute() =&gt; &quot;StratÃ©gie A exÃ©cutÃ©e&quot;;&#x0a;}&#x0a;&#x0a;public class ConcreteStrategyB : IStrategy&#x0a;{&#x0a;    public string Execute() =&gt; &quot;StratÃ©gie B exÃ©cutÃ©e&quot;;&#x0a;}&#x0a;&#x0a;// Contexte&#x0a;public class Context&#x0a;{&#x0a;    private IStrategy _strategy;&#x0a;&#x0a;    public Context(IStrategy strategy)&#x0a;    {&#x0a;        _strategy = strategy;&#x0a;    }&#x0a;&#x0a;    public void SetStrategy(IStrategy strategy)&#x0a;    {&#x0a;        _strategy = strategy;&#x0a;    }&#x0a;&#x0a;    public string ExecuteStrategy() =&gt; _strategy.Execute();&#x0a;}" />
                    </VerticalStackLayout>
                </Border>

                <!-- Real-World Example -->
                <Border BackgroundColor="{AppThemeBinding Light=#FFFBEB, Dark=#78350F}"
                        Stroke="{StaticResource Warning}"
                        StrokeThickness="1"
                        Padding="16"
                        StrokeShape="RoundRectangle 12">
                    <VerticalStackLayout Spacing="8">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="ðŸŒ" FontSize="20" />
                            <Label Text="{x:Static resx:Strings.AbstractFactoryPattern_RealWorldTitle}"
                                   FontAttributes="Bold"
                                   Style="{StaticResource BodyLarge}" />
                        </HorizontalStackLayout>
                        <Label Text="{x:Static resx:Strings.StrategyPattern_RealWorldDesc}"
                               Style="{StaticResource BodyMedium}"
                               LineBreakMode="WordWrap" />
                    </VerticalStackLayout>
                </Border>

                <!-- Pros and Cons -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                    <!-- Pros -->
                    <Border Style="{StaticResource ProCard}">
                        <VerticalStackLayout Spacing="12">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="âœ…" FontSize="20" />
                                <Label Text="{x:Static resx:Strings.SingletonPattern_ProsTitle}" FontAttributes="Bold"
                                       Style="{StaticResource BodyLarge}" />
                            </HorizontalStackLayout>
                            <VerticalStackLayout Spacing="6">
                                <Label Text="{x:Static resx:Strings.StrategyPattern_Pros1}"
                                       Style="{StaticResource BodySmall}" />
                                <Label Text="{x:Static resx:Strings.StrategyPattern_Pros2}"
                                       Style="{StaticResource BodySmall}" />
                                <Label Text="{x:Static resx:Strings.StrategyPattern_Pros3}"
                                       Style="{StaticResource BodySmall}" />
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </Border>
                    
                    <!-- Cons -->
                    <Border Style="{StaticResource ConCard}">
                        <VerticalStackLayout Spacing="12">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="âš ï¸" FontSize="20" />
                                <Label Text="{x:Static resx:Strings.SingletonPattern_ConsTitle}" FontAttributes="Bold"
                                       Style="{StaticResource BodyLarge}" />
                            </HorizontalStackLayout>
                            <VerticalStackLayout Spacing="6">
                                <Label Text="{x:Static resx:Strings.StrategyPattern_Cons1}"
                                       Style="{StaticResource BodySmall}" />
                                <Label Text="{x:Static resx:Strings.StrategyPattern_Cons2}"
                                       Style="{StaticResource BodySmall}" />
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </Border>
                </Grid>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
