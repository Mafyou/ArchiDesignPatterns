                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>
                        <BoxView Style="{StaticResource Divider}" Margin="0,0" />
                        <Label Text="{x:Static resx:Strings.IteratorPattern_InteractiveDesc}"
                               Style="{StaticResource BodyMedium}" />
                        <Button Text="{x:Static resx:Strings.IteratorPattern_InteractiveButton}" Command="{Binding IterateCommand}" HorizontalOptions="Fill" />
                        <Label x:Name="ResultLabel" Text="{Binding Result}" Style="{StaticResource ResultLabel}" LineBreakMode="WordWrap" />
                    </VerticalStackLayout>
