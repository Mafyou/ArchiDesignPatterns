                               TextColor="White" />
                        <Border BackgroundColor="White" Opacity="0.3"
                                Padding="8,4" StrokeThickness="0"
                                StrokeShape="RoundRectangle 6"
                                HorizontalOptions="Start">
                            <Label Text="{x:Static resx:Strings.ChainOfResponsibilityPattern_Behavioral}" FontSize="11"
                                   FontAttributes="Bold" TextColor="White" />
                        </Border>
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Border>
        <!-- Main Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Style="{StaticResource PatternDetailContainer}">
                
                <!-- Description Card -->
                <Border Style="{StaticResource ElevatedCard}">
                    <VerticalStackLayout Spacing="12">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="ðŸ“–" FontSize="20" />
                            <Label Text="{x:Static resx:Strings.SingletonPattern_DescriptionTitle}"
                               Style="{StaticResource SubTitle}" />
                        </HorizontalStackLayout>
                        <BoxView Style="{StaticResource Divider}" Margin="0,0" />
                        <Label Text="{x:Static resx:Strings.StatePattern_Description}"
                               Style="{StaticResource BodyLarge}"
                               LineBreakMode="WordWrap" />
                    </VerticalStackLayout>
                </Border>

                <!-- When to Use -->
                <Border Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="12">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="ðŸŽ¯" FontSize="20" />
                            <Label Text="{x:Static resx:Strings.SingletonPattern_WhenToUseTitle}"
                               Style="{StaticResource SubTitle}" />
                        </HorizontalStackLayout>
                        <BoxView Style="{StaticResource Divider}" Margin="0,0" />
                        <VerticalStackLayout Spacing="8">
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                <Label Text="âœ“" FontSize="18" TextColor="{StaticResource Success}" />
                                <Label Grid.Column="1" Text="{x:Static resx:Strings.StatePattern_WhenToUse1}"
                                       Style="{StaticResource BodyMedium}" LineBreakMode="WordWrap" />
                            </Grid>
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                <Label Text="âœ“" FontSize="18" TextColor="{StaticResource Success}" />
                                <Label Grid.Column="1" Text="{x:Static resx:Strings.StatePattern_WhenToUse2}"
                                       Style="{StaticResource BodyMedium}" LineBreakMode="WordWrap" />
                            </Grid>
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                <Label Text="âœ“" FontSize="18" TextColor="{StaticResource Success}" />
                                <Label Grid.Column="1" Text="{x:Static resx:Strings.StatePattern_WhenToUse3}"
                                       Style="{StaticResource BodyMedium}" LineBreakMode="WordWrap" />
                            </Grid>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Interactive Example -->
                <Border Style="{StaticResource InteractiveSection}">
                    <VerticalStackLayout Spacing="16">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="ðŸŽ®" FontSize="20" VerticalOptions="Center" />
                            <Label Text="{x:Static resx:Strings.SingletonPattern_InteractiveTitle}"
                                   Style="{StaticResource SubTitle}"
                                   TextColor="{StaticResource Primary}"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>
                        <BoxView Style="{StaticResource Divider}" Margin="0,0" />
                        <Label Text="{x:Static resx:Strings.StatePattern_InteractiveDesc}"
                               Style="{StaticResource BodyMedium}" />
                        <Button Text="{x:Static resx:Strings.StatePattern_InteractiveButton}"
                                Clicked="OnChangeStateClicked"
                                HorizontalOptions="Fill" />
                        <Label x:Name="ResultLabel"
                               Style="{StaticResource ResultLabel}"
                               LineBreakMode="WordWrap" />
                    </VerticalStackLayout>
                </Border>

                <!-- Code Example -->
                <Border Style="{StaticResource CodeSection}">
                    <VerticalStackLayout Spacing="12">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="ðŸ’»" FontSize="20" />
                            <Label Text="{x:Static resx:Strings.SingletonPattern_CodeTitle}"
                                   Style="{StaticResource SubTitle}" />
                        </HorizontalStackLayout>
                        <BoxView Style="{StaticResource Divider}" Margin="0,0" />
                        <Editor Style="{StaticResource CodeEditor}"
                                Text="// Interface State&#x0a;public interface IState&#x0a;{&#x0a;    string Handle();&#x0a;}&#x0a;&#x0a;// Ã‰tats concrets&#x0a;public class StateA : IState&#x0a;{&#x0a;    public string Handle() =&gt; &quot;Ã‰tat A actif&quot;;&#x0a;}&#x0a;&#x0a;public class StateB : IState&#x0a;{&#x0a;    public string Handle() =&gt; &quot;Ã‰tat B actif&quot;;&#x0a;}&#x0a;&#x0a;// Contexte&#x0a;public class Context&#x0a;{&#x0a;    private IState _state;&#x0a;&#x0a;    public Context(IState state)&#x0a;    {&#x0a;        TransitionTo(state);&#x0a;    }&#x0a;&#x0a;    public void TransitionTo(IState state)&#x0a;    {&#x0a;        _state = state;&#x0a;        Console.WriteLine($&quot;Transition vers {state.GetType().Name}&quot;);&#x0a;    }&#x0a;&#x0a;    public string Request() =&gt; _state.Handle();&#x0a;}" />
                    </VerticalStackLayout>
                </Border>

                <!-- Real-World Example -->
                <Border BackgroundColor="{AppThemeBinding Light=#FFFBEB, Dark=#78350F}"
                        Stroke="{StaticResource Warning}"
                        StrokeThickness="1"
                        Padding="16"
                        StrokeShape="RoundRectangle 12">
                    <VerticalStackLayout Spacing="8">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="ðŸŒ" FontSize="20" />
                            <Label Text="{x:Static resx:Strings.AbstractFactoryPattern_RealWorldTitle}"
                                   FontAttributes="Bold"
                                   Style="{StaticResource BodyLarge}" />
                        </HorizontalStackLayout>
                        <Label Text="{x:Static resx:Strings.StatePattern_RealWorldDesc}"
                               Style="{StaticResource BodyMedium}"
                               LineBreakMode="WordWrap" />
                    </VerticalStackLayout>
                </Border>

                <!-- Pros and Cons -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                    <!-- Pros -->
                    <Border Style="{StaticResource ProCard}">
                        <VerticalStackLayout Spacing="12">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="âœ…" FontSize="20" />
                                <Label Text="{x:Static resx:Strings.SingletonPattern_ProsTitle}" FontAttributes="Bold"
                                       Style="{StaticResource BodyLarge}" />
                            </HorizontalStackLayout>
                            <VerticalStackLayout Spacing="6">
                                <Label Text="{x:Static resx:Strings.StatePattern_Pros1}"
                                       Style="{StaticResource BodySmall}" />
                                <Label Text="{x:Static resx:Strings.StatePattern_Pros2}"
                                       Style="{StaticResource BodySmall}" />
                                <Label Text="{x:Static resx:Strings.StatePattern_Pros3}"
                                       Style="{StaticResource BodySmall}" />
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </Border>
                    
                    <!-- Cons -->
                    <Border Style="{StaticResource ConCard}">
                        <VerticalStackLayout Spacing="12">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="âš ï¸" FontSize="20" />
                                <Label Text="{x:Static resx:Strings.SingletonPattern_ConsTitle}" FontAttributes="Bold"
                                       Style="{StaticResource BodyLarge}" />
                            </HorizontalStackLayout>
                            <VerticalStackLayout Spacing="6">
                                <Label Text="{x:Static resx:Strings.StatePattern_Cons1}"
                                       Style="{StaticResource BodySmall}" />
                                <Label Text="{x:Static resx:Strings.StatePattern_Cons2}"
                                       Style="{StaticResource BodySmall}" />
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </Border>
                </Grid>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>