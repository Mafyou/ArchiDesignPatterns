<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ArchiDesignPatterns.Mobile.ViewModels"
             x:Class="ArchiDesignPatterns.Mobile.Pages.DesignPatterns.PrototypePatternPage"
             x:DataType="viewmodels:PrototypePatternViewModel"
             Title="Prototype">
    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Border Grid.Row="0"
                BackgroundColor="{StaticResource CreationalPattern}"
                Padding="20,24,20,20"
                StrokeThickness="0">
            <VerticalStackLayout Spacing="8">
                <HorizontalStackLayout Spacing="12">
                    <Label Text="🧬" FontSize="32" VerticalOptions="Center" />
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Prototype Pattern"
                               FontSize="28" FontAttributes="Bold"
                               TextColor="White" />
                        <Border BackgroundColor="White" Opacity="0.3"
                                Padding="8,4" StrokeThickness="0"
                                StrokeShape="RoundRectangle 6"
                                HorizontalOptions="Start">
                            <Label Text="Creational" FontSize="11"
                                   FontAttributes="Bold" TextColor="White" />
                        </Border>
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Border>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Style="{StaticResource PatternDetailContainer}">
                
                <Border Style="{StaticResource ElevatedCard}">
                    <VerticalStackLayout Spacing="12">
                        <Label Text="📖 Description" Style="{StaticResource SubTitle}" />
                        <BoxView Style="{StaticResource Divider}" Margin="0,0" />
                        <Label Text="The Prototype pattern creates new objects by copying an existing object, known as the prototype. This is useful when object creation is expensive or complex."
                               Style="{StaticResource BodyLarge}"
                               LineBreakMode="WordWrap" />
                    </VerticalStackLayout>
                </Border>

                <Border Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="12">
                        <Label Text="🎯 When to Use" Style="{StaticResource SubTitle}" />
                        <BoxView Style="{StaticResource Divider}" Margin="0,0" />
                        <VerticalStackLayout Spacing="8">
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                <Label Text="?" FontSize="18" TextColor="{StaticResource Success}" />
                                <Label Grid.Column="1" Text="Object creation is expensive"
                                       Style="{StaticResource BodyMedium}" LineBreakMode="WordWrap" />
                            </Grid>
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                <Label Text="?" FontSize="18" TextColor="{StaticResource Success}" />
                                <Label Grid.Column="1" Text="You need to create many similar objects"
                                       Style="{StaticResource BodyMedium}" LineBreakMode="WordWrap" />
                            </Grid>
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                <Label Text="?" FontSize="18" TextColor="{StaticResource Success}" />
                                <Label Grid.Column="1" Text="Avoiding subclasses for object creation"
                                       Style="{StaticResource BodyMedium}" LineBreakMode="WordWrap" />
                            </Grid>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <Border Style="{StaticResource InteractiveSection}">
                    <VerticalStackLayout Spacing="16">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="🎮" FontSize="20" VerticalOptions="Center" />
                            <Label Text="Interactive Example"
                                   Style="{StaticResource SubTitle}"
                                   TextColor="{StaticResource Primary}"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>
                        <BoxView Style="{StaticResource Divider}" Margin="0,0" />
                        <Label Text="Clone an object instead of creating a new one:"
                               Style="{StaticResource BodyMedium}" />
                        <Button Text="Clone Object"
                                Clicked="OnCloneObjectClicked"
                                HorizontalOptions="Fill" />
                        <Label x:Name="ResultLabel"
                               Style="{StaticResource ResultLabel}"
                               LineBreakMode="WordWrap" />
                    </VerticalStackLayout>
                </Border>

                <Border Style="{StaticResource CodeSection}">
                    <VerticalStackLayout Spacing="12">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="💻" FontSize="20" />
                            <Label Text="Code Example" Style="{StaticResource SubTitle}" />
                        </HorizontalStackLayout>
                        <BoxView Style="{StaticResource Divider}" Margin="0,0" />
                        <Editor Style="{StaticResource CodeEditor}"
                                Text="// Prototype Interface&#x0a;public interface IPrototype&#x0a;{&#x0a;    IPrototype Clone();&#x0a;}&#x0a;&#x0a;// Concrete Prototype&#x0a;public class Document : IPrototype&#x0a;{&#x0a;    public string Title { get; set; }&#x0a;    public string Content { get; set; }&#x0a;    public DateTime Created { get; set; }&#x0a;&#x0a;    public IPrototype Clone()&#x0a;    {&#x0a;        return new Document&#x0a;        {&#x0a;            Title = this.Title,&#x0a;            Content = this.Content,&#x0a;            Created = DateTime.Now&#x0a;        };&#x0a;    }&#x0a;}&#x0a;&#x0a;// Usage&#x0a;var original = new Document&#x0a;{&#x0a;    Title = &quot;Original&quot;,&#x0a;    Content = &quot;Content&quot;&#x0a;};&#x0a;&#x0a;var clone = (Document)original.Clone();&#x0a;clone.Title = &quot;Copy&quot;;" />
                    </VerticalStackLayout>
                </Border>

                <Border BackgroundColor="{AppThemeBinding Light=#FFFBEB, Dark=#78350F}"
                        Stroke="{StaticResource Warning}"
                        StrokeThickness="1"
                        Padding="16"
                        StrokeShape="RoundRectangle 12">
                    <VerticalStackLayout Spacing="8">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="💡" FontSize="20" />
                            <Label Text="Real-World Example"
                                   FontAttributes="Bold"
                                   Style="{StaticResource BodyLarge}" />
                        </HorizontalStackLayout>
                        <Label Text="Document templates: Clone a template document with preset formatting and styles instead of creating from scratch each time."
                               Style="{StaticResource BodyMedium}"
                               LineBreakMode="WordWrap" />
                    </VerticalStackLayout>
                </Border>

                <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                    <Border Style="{StaticResource ProCard}">
                        <VerticalStackLayout Spacing="12">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="✅" FontSize="20" />
                                <Label Text="Benefits" FontAttributes="Bold"
                                       Style="{StaticResource BodyLarge}" />
                            </HorizontalStackLayout>
                            <VerticalStackLayout Spacing="6">
                                <Label Text="• Fast object creation"
                                       Style="{StaticResource BodySmall}" />
                                <Label Text="• Reduces subclassing"
                                       Style="{StaticResource BodySmall}" />
                                <Label Text="• Runtime flexibility"
                                       Style="{StaticResource BodySmall}" />
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </Border>
                    
                    <Border Style="{StaticResource ConCard}">
                        <VerticalStackLayout Spacing="12">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="⚠️" FontSize="20" />
                                <Label Text="Drawbacks" FontAttributes="Bold"
                                       Style="{StaticResource BodyLarge}" />
                            </HorizontalStackLayout>
                            <VerticalStackLayout Spacing="6">
                                <Label Text="• Deep copy complexity"
                                       Style="{StaticResource BodySmall}" />
                                <Label Text="• Circular references"
                                       Style="{StaticResource BodySmall}" />
                                <Label Text="• Clone method maintenance"
                                       Style="{StaticResource BodySmall}" />
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </Border>
                </Grid>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
