                        <BoxView Style="{StaticResource Divider}" Margin="0,0" />
                        <Label Text="The Factory pattern provides an interface for creating objects without exposing the creation logic to the client. It delegates the instantiation to specialized factory classes."
                               Style="{StaticResource BodyLarge}"
                               LineBreakMode="WordWrap" />
                    </VerticalStackLayout>
                </Border>

                <!-- When to Use -->
                <Border Style="{StaticResource Card}">
                    <VerticalStackLayout Spacing="12">
                        <Label Text="ðŸŽ¯ When to Use"
                               Style="{StaticResource SubTitle}" />
                        <BoxView Style="{StaticResource Divider}" Margin="0,0" />
                        <VerticalStackLayout Spacing="8">
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                <Label Text="âœ“" FontSize="18" TextColor="{StaticResource Success}" />
                                <Label Grid.Column="1" Text="When object creation logic is complex"
                                       Style="{StaticResource BodyMedium}" LineBreakMode="WordWrap" />
                            </Grid>
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                <Label Text="âœ“" FontSize="18" TextColor="{StaticResource Success}" />
                                <Label Grid.Column="1" Text="When you need to decouple object creation from usage"
                                       Style="{StaticResource BodyMedium}" LineBreakMode="WordWrap" />
                            </Grid>
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                <Label Text="âœ“" FontSize="18" TextColor="{StaticResource Success}" />
                                <Label Grid.Column="1" Text="For creating families of related objects"
                                       Style="{StaticResource BodyMedium}" LineBreakMode="WordWrap" />
                            </Grid>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Interactive Example -->
