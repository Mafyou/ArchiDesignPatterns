<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ArchiDesignPatterns.Mobile.ViewModels"
             x:Class="ArchiDesignPatterns.Mobile.Pages.Architectures.MVCArchitecturePage"
             Title="MVC Architecture">
    <ContentPage.BindingContext>
        <viewmodels:MVCArchitectureViewModel />
    </ContentPage.BindingContext>
    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Border Grid.Row="0"
                BackgroundColor="{StaticResource ArchitecturePattern}"
                Padding="20,24,20,20"
                StrokeThickness="0">
            <VerticalStackLayout Spacing="8">
                <HorizontalStackLayout Spacing="12">
                    <!-- Valid MVC emoji -->
                    <Label Text="ðŸ“" FontSize="32" VerticalOptions="Center" />
                    <VerticalStackLayout Spacing="4">
                        <Label Text="MVC Architecture"
                               FontSize="28" FontAttributes="Bold"
                               TextColor="White" />
                        <Border BackgroundColor="White" Opacity="0.3"
                                Padding="8,4" StrokeThickness="0"
                                StrokeShape="RoundRectangle 6"
                                HorizontalOptions="Start">
                            <Label Text="Architecture" FontSize="11"
                                   FontAttributes="Bold" TextColor="White" />
                        </Border>
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Border>
        <!-- Body -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="15">
                <Label Text="MVC" FontSize="24" FontAttributes="Bold" />
                <Label Text="L'architecture MVC separe l'application en trois composants : Modele, Vue et Controleur." FontSize="16" />
                <Border Stroke="Black" StrokeThickness="2" Padding="10" Margin="5">
                    <VerticalStackLayout>
                        <Label Text="Exemple interactif :" FontAttributes="Bold" />
                        <Button Text="Simuler une action utilisateur" Clicked="OnSimulateActionClicked" />
                        <Label x:Name="ResultLabel" FontSize="14" />
                    </VerticalStackLayout>
                </Border>
                <BoxView HeightRequest="1" BackgroundColor="Gray" Margin="0,10" />
                <Label Text="Exemple de structure :" FontAttributes="Bold" />
                <Editor IsReadOnly="True" HeightRequest="120"
                    Text="public class Model { public string Data = 'Hello'; }\npublic class View { public void Display(string d) =&gt; Console.WriteLine(d); }\npublic class Controller { public void Update(Model m, View v) { m.Data = 'Updated'; v.Display(m.Data); } }" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
