<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- =============================================== -->
    <!-- Base Styles -->
    <!-- =============================================== -->
    
    <Style TargetType="ContentPage" ApplyToDerivedTypes="True">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray50}, Dark={StaticResource Gray900}}" />
    </Style>

    <!-- =============================================== -->
    <!-- Typography Styles -->
    <!-- =============================================== -->
    
    <Style x:Key="DisplayLarge" TargetType="Label">
        <Setter Property="FontSize" Value="36" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray50}}" />
        <Setter Property="LineBreakMode" Value="WordWrap" />
    </Style>

    <Style x:Key="DisplayMedium" TargetType="Label">
        <Setter Property="FontSize" Value="32" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray50}}" />
    </Style>

    <Style x:Key="Headline" TargetType="Label">
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray50}}" />
    </Style>

    <Style x:Key="Title" TargetType="Label">
        <Setter Property="FontSize" Value="22" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray800}, Dark={StaticResource Gray100}}" />
    </Style>

    <Style x:Key="SubTitle" TargetType="Label">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray700}, Dark={StaticResource Gray200}}" />
    </Style>

    <Style x:Key="BodyLarge" TargetType="Label">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray700}, Dark={StaticResource Gray300}}" />
        <Setter Property="LineHeight" Value="1.5" />
    </Style>

    <Style x:Key="BodyMedium" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />
        <Setter Property="LineHeight" Value="1.5" />
    </Style>

    <Style x:Key="BodySmall" TargetType="Label">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray500}}" />
    </Style>

    <Style x:Key="Caption" TargetType="Label">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
        <Setter Property="FontAttributes" Value="Italic" />
    </Style>

    <Style x:Key="CategoryBadge" TargetType="Label">
        <Setter Property="FontSize" Value="11" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource White}" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
    </Style>

    <!-- =============================================== -->
    <!-- Button Styles -->
    <!-- =============================================== -->
    
    <Style TargetType="Button">
        <Setter Property="TextColor" Value="{StaticResource White}" />
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="20,12" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Shadow">
            <Shadow Brush="{StaticResource Primary}" Opacity="0.3" Radius="8" Offset="0,4" />
        </Setter>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray700}}" />
                            <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray500}}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource PrimaryDark}" />
                            <Setter Property="Scale" Value="0.96" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="SecondaryButton" TargetType="Button">
        <Setter Property="TextColor" Value="{StaticResource Primary}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="BorderColor" Value="{StaticResource Primary}" />
        <Setter Property="BorderWidth" Value="2" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="20,12" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style x:Key="TextButton" TargetType="Button">
        <Setter Property="TextColor" Value="{StaticResource Primary}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Padding" Value="8,4" />
    </Style>

    <Style x:Key="IconButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray800}}" />
        <Setter Property="TextColor" Value="{StaticResource Primary}" />
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="Padding" Value="12" />
        <Setter Property="WidthRequest" Value="48" />
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="Shadow">
            <Shadow Brush="Black" Opacity="0.1" Radius="8" Offset="0,2" />
        </Setter>
    </Style>

    <!-- =============================================== -->
    <!-- Card Styles -->
    <!-- =============================================== -->
    
    <Style x:Key="Card" TargetType="Border">
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray800}}" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="StrokeShape" Value="RoundRectangle 16" />
        <Setter Property="Shadow">
            <Shadow Brush="Black" Opacity="0.1" Radius="16" Offset="0,4" />
        </Setter>
    </Style>

    <Style x:Key="ElevatedCard" TargetType="Border">
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray800}}" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="StrokeShape" Value="RoundRectangle 20" />
        <Setter Property="Shadow">
            <Shadow Brush="Black" Opacity="0.15" Radius="24" Offset="0,8" />
        </Setter>
    </Style>

    <Style x:Key="OutlineCard" TargetType="Border">
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray800}}" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="StrokeShape" Value="RoundRectangle 16" />
    </Style>

    <Style x:Key="InteractiveCard" TargetType="Border">
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray800}}" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="StrokeShape" Value="RoundRectangle 16" />
        <Setter Property="Shadow">
            <Shadow Brush="Black" Opacity="0.1" Radius="12" Offset="0,2" />
        </Setter>
    </Style>

    <Style x:Key="PatternCard" TargetType="Border" BasedOn="{StaticResource Card}">
        <Setter Property="Padding" Value="20" />
        <Setter Property="Margin" Value="0,8" />
    </Style>

    <!-- =============================================== -->
    <!-- Badge Styles -->
    <!-- =============================================== -->
    
    <Style x:Key="CreationalBadge" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource CreationalPattern}" />
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="StrokeShape" Value="RoundRectangle 8" />
        <Setter Property="HorizontalOptions" Value="Start" />
    </Style>

    <Style x:Key="StructuralBadge" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource StructuralPattern}" />
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="StrokeShape" Value="RoundRectangle 8" />
        <Setter Property="HorizontalOptions" Value="Start" />
    </Style>

    <Style x:Key="BehavioralBadge" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource BehavioralPattern}" />
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="StrokeShape" Value="RoundRectangle 8" />
        <Setter Property="HorizontalOptions" Value="Start" />
    </Style>

    <Style x:Key="ArchitectureBadge" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource ArchitecturePattern}" />
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="StrokeShape" Value="RoundRectangle 8" />
        <Setter Property="HorizontalOptions" Value="Start" />
    </Style>

    <!-- =============================================== -->
    <!-- Input Styles -->
    <!-- =============================================== -->
    
    <Style TargetType="Entry">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray50}}" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray800}}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource Gray400}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="Margin" Value="0,4" />
    </Style>

    <Style TargetType="Editor">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray50}}" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray800}}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource Gray400}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Margin" Value="0,4" />
    </Style>

    <Style x:Key="CodeEditor" TargetType="Editor">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray800}, Dark={StaticResource Gray200}}" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="IsReadOnly" Value="True" />
        <Setter Property="AutoSize" Value="TextChanges" />
        <Setter Property="MinimumHeightRequest" Value="100" />
    </Style>

    <Style TargetType="SearchBar">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray50}}" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray800}}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource Gray400}" />
        <Setter Property="CancelButtonColor" Value="{StaticResource Primary}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="Margin" Value="0,8" />
    </Style>

    <Style TargetType="Picker">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray50}}" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray800}}" />
        <Setter Property="TitleColor" Value="{StaticResource Gray400}" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <!-- =============================================== -->
    <!-- Container Styles -->
    <!-- =============================================== -->
    
    <Style x:Key="PageContainer" TargetType="VerticalStackLayout">
        <Setter Property="Padding" Value="20" />
        <Setter Property="Spacing" Value="20" />
    </Style>

    <Style x:Key="SectionContainer" TargetType="VerticalStackLayout">
        <Setter Property="Spacing" Value="12" />
        <Setter Property="Margin" Value="0,8" />
    </Style>

    <Style x:Key="HeroSection" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource PrimaryGradient}" />
        <Setter Property="Padding" Value="24" />
        <Setter Property="Margin" Value="-20,0,-20,20" />
        <Setter Property="StrokeThickness" Value="0" />
    </Style>

    <!-- =============================================== -->
    <!-- Divider Styles -->
    <!-- =============================================== -->
    
    <Style x:Key="Divider" TargetType="BoxView">
        <Setter Property="HeightRequest" Value="1" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}" />
        <Setter Property="Margin" Value="0,16" />
        <Setter Property="HorizontalOptions" Value="Fill" />
    </Style>

    <Style x:Key="ThickDivider" TargetType="BoxView">
        <Setter Property="HeightRequest" Value="4" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray800}}" />
        <Setter Property="Margin" Value="-20,20,-20,20" />
        <Setter Property="HorizontalOptions" Value="Fill" />
    </Style>

    <!-- =============================================== -->
    <!-- Default Styles -->
    <!-- =============================================== -->
    
    <Style TargetType="Label" ApplyToDerivedTypes="True">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray50}}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="LineBreakMode" Value="WordWrap" />
    </Style>

    <Style TargetType="Border">
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray800}}" />
    </Style>

    <Style TargetType="ScrollView">
        <Setter Property="Padding" Value="0" />
    </Style>

    <Style TargetType="Image">
        <Setter Property="Aspect" Value="AspectFit" />
    </Style>

    <Style TargetType="BoxView">
        <Setter Property="Color" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}" />
    </Style>

    <!-- =============================================== -->
    <!-- Interactive Example Styles -->
    <!-- =============================================== -->
    
    <Style x:Key="InteractiveSection" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray50}, Dark={StaticResource Gray900}}" />
        <Setter Property="Stroke" Value="{StaticResource Primary}" />
        <Setter Property="StrokeThickness" Value="2" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="Margin" Value="0,8" />
        <Setter Property="StrokeShape" Value="RoundRectangle 16" />
    </Style>

    <Style x:Key="CodeSection" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}" />
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="0,8" />
        <Setter Property="StrokeShape" Value="RoundRectangle 12" />
    </Style>

    <Style x:Key="ResultLabel" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{StaticResource Info}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="Margin" Value="0,8,0,0" />
        <Setter Property="LineBreakMode" Value="WordWrap" />
    </Style>

    <!-- =============================================== -->
    <!-- List Item Styles -->
    <!-- =============================================== -->
    
    <Style x:Key="ListItemBorder" TargetType="Border">
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray800}}" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="0,6" />
        <Setter Property="StrokeShape" Value="RoundRectangle 12" />
        <Setter Property="Shadow">
            <Shadow Brush="Black" Opacity="0.08" Radius="8" Offset="0,2" />
        </Setter>
    </Style>
</ResourceDictionary>
