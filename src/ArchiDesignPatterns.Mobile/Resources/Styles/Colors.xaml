<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Primary Brand Colors -->
    <Color x:Key="Primary">#6366F1</Color>
    <Color x:Key="PrimaryDark">#4338CA</Color>
    <Color x:Key="PrimaryLight">#A5B4FC</Color>
    <Color x:Key="PrimaryDarkText">#242424</Color>
    
    <Color x:Key="Secondary">#8B5CF6</Color>
    <Color x:Key="SecondaryDark">#6D28D9</Color>
    <Color x:Key="SecondaryLight">#C4B5FD</Color>
    <Color x:Key="SecondaryDarkText">#9880e5</Color>
    
    <Color x:Key="Tertiary">#EC4899</Color>
    <Color x:Key="TertiaryDark">#BE185D</Color>
    <Color x:Key="TertiaryLight">#F9A8D4</Color>

    <!-- Pattern Category Colors -->
    <Color x:Key="CreationalPattern">#10B981</Color>
    <Color x:Key="StructuralPattern">#3B82F6</Color>
    <Color x:Key="BehavioralPattern">#F59E0B</Color>
    <Color x:Key="ArchitecturePattern">#8B5CF6</Color>
    
    <!-- Semantic Colors -->
    <Color x:Key="Success">#10B981</Color>
    <Color x:Key="SuccessDark">#059669</Color>
    <Color x:Key="Warning">#F59E0B</Color>
    <Color x:Key="WarningDark">#D97706</Color>
    <Color x:Key="Error">#EF4444</Color>
    <Color x:Key="ErrorDark">#DC2626</Color>
    <Color x:Key="Info">#3B82F6</Color>
    <Color x:Key="InfoDark">#2563EB</Color>

    <!-- Neutral Colors -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="OffBlack">#1F1F1F</Color>
    <Color x:Key="OffWhite">#FAFAFA</Color>
    
    <!-- Gray Scale -->
    <Color x:Key="Gray50">#F9FAFB</Color>
    <Color x:Key="Gray100">#F3F4F6</Color>
    <Color x:Key="Gray200">#E5E7EB</Color>
    <Color x:Key="Gray300">#D1D5DB</Color>
    <Color x:Key="Gray400">#9CA3AF</Color>
    <Color x:Key="Gray500">#6B7280</Color>
    <Color x:Key="Gray600">#4B5563</Color>
    <Color x:Key="Gray700">#374151</Color>
    <Color x:Key="Gray800">#1F2937</Color>
    <Color x:Key="Gray900">#111827</Color>
    <Color x:Key="Gray950">#030712</Color>

    <!-- Background Colors -->
    <Color x:Key="PageBackgroundLight">#F9FAFB</Color>
    <Color x:Key="PageBackgroundDark">#111827</Color>
    <Color x:Key="CardBackgroundLight">#FFFFFF</Color>
    <Color x:Key="CardBackgroundDark">#1F2937</Color>
    <Color x:Key="SurfaceBackgroundLight">#F3F4F6</Color>
    <Color x:Key="SurfaceBackgroundDark">#030712</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimaryLight">#111827</Color>
    <Color x:Key="TextPrimaryDark">#F9FAFB</Color>
    <Color x:Key="TextSecondaryLight">#4B5563</Color>
    <Color x:Key="TextSecondaryDark">#9CA3AF</Color>
    <Color x:Key="TextTertiaryLight">#6B7280</Color>
    <Color x:Key="TextTertiaryDark">#6B7280</Color>

    <!-- Border Colors -->
    <Color x:Key="BorderLight">#D1D5DB</Color>
    <Color x:Key="BorderMedium">#9CA3AF</Color>
    <Color x:Key="BorderDark">#6B7280</Color>

    <!-- Solid Color Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <!-- Gradient Brushes -->
    <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource Primary}" Offset="0.0" />
        <GradientStop Color="{StaticResource Secondary}" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="SuccessGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource Success}" Offset="0.0" />
        <GradientStop Color="{StaticResource Info}" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="HeroGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource Primary}" Offset="0.0" />
        <GradientStop Color="{StaticResource Secondary}" Offset="0.5" />
        <GradientStop Color="{StaticResource Tertiary}" Offset="1.0" />
    </LinearGradientBrush>
</ResourceDictionary>