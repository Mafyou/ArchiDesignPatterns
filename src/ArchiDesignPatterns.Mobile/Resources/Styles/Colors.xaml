<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Primary Brand Colors -->
    <Color x:Key="Primary">#5048E5</Color>
    <Color x:Key="PrimaryDark">#3730A3</Color>
    <Color x:Key="PrimaryLight">#9F7AEA</Color>
    <Color x:Key="PrimaryDarkText">#1A202C</Color>
    
    <Color x:Key="Secondary">#7C3AED</Color>
    <Color x:Key="SecondaryDark">#5521B5</Color>
    <Color x:Key="SecondaryLight">#A78BFA</Color>
    <Color x:Key="SecondaryDarkText">#805AD5</Color>
    
    <Color x:Key="Tertiary">#E53E3E</Color>
    <Color x:Key="TertiaryDark">#C53030</Color>
    <Color x:Key="TertiaryLight">#FBB6CE</Color>

    <!-- Pattern Category Colors with better contrast -->
    <Color x:Key="CreationalPattern">#059669</Color>
    <Color x:Key="StructuralPattern">#2563EB</Color>
    <Color x:Key="BehavioralPattern">#D97706</Color>
    <Color x:Key="ArchitecturePattern">#7C3AED</Color>
    <Color x:Key="SOLIDPrinciple">#0891B2</Color>
    
    <!-- Semantic Colors -->
    <Color x:Key="Success">#059669</Color>
    <Color x:Key="SuccessDark">#047857</Color>
    <Color x:Key="Warning">#D97706</Color>
    <Color x:Key="WarningDark">#B45309</Color>
    <Color x:Key="Error">#DC2626</Color>
    <Color x:Key="ErrorDark">#B91C1C</Color>
    <Color x:Key="Info">#2563EB</Color>
    <Color x:Key="InfoDark">#1D4ED8</Color>

    <!-- Neutral Colors -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="OffBlack">#0F172A</Color>
    <Color x:Key="OffWhite">#F8FAFC</Color>
    
    <!-- Gray Scale with improved contrast ratios -->
    <Color x:Key="Gray50">#F8FAFC</Color>
    <Color x:Key="Gray100">#F1F5F9</Color>
    <Color x:Key="Gray200">#E2E8F0</Color>
    <Color x:Key="Gray300">#CBD5E1</Color>
    <Color x:Key="Gray400">#94A3B8</Color>
    <Color x:Key="Gray500">#64748B</Color>
    <Color x:Key="Gray600">#475569</Color>
    <Color x:Key="Gray700">#334155</Color>
    <Color x:Key="Gray800">#1E293B</Color>
    <Color x:Key="Gray900">#0F172A</Color>
    <Color x:Key="Gray950">#020617</Color>

    <!-- Background Colors -->
    <Color x:Key="PageBackgroundLight">#F8FAFC</Color>
    <Color x:Key="PageBackgroundDark">#0F172A</Color>
    <Color x:Key="CardBackgroundLight">#FFFFFF</Color>
    <Color x:Key="CardBackgroundDark">#1E293B</Color>
    <Color x:Key="SurfaceBackgroundLight">#F1F5F9</Color>
    <Color x:Key="SurfaceBackgroundDark">#020617</Color>

    <!-- Text Colors with AA/AAA compliance -->
    <Color x:Key="TextPrimaryLight">#0F172A</Color>
    <Color x:Key="TextPrimaryDark">#F8FAFC</Color>
    <Color x:Key="TextSecondaryLight">#334155</Color>
    <Color x:Key="TextSecondaryDark">#CBD5E1</Color>
    <Color x:Key="TextTertiaryLight">#475569</Color>
    <Color x:Key="TextTertiaryDark">#94A3B8</Color>

    <!-- Border Colors -->
    <Color x:Key="BorderLight">#CBD5E1</Color>
    <Color x:Key="BorderMedium">#94A3B8</Color>
    <Color x:Key="BorderDark">#64748B</Color>

    <!-- Solid Color Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <!-- Gradient Brushes -->
    <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource Primary}" Offset="0.0" />
        <GradientStop Color="{StaticResource Secondary}" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="SuccessGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource Success}" Offset="0.0" />
        <GradientStop Color="{StaticResource Info}" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="HeroGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource Primary}" Offset="0.0" />
        <GradientStop Color="{StaticResource Secondary}" Offset="0.5" />
        <GradientStop Color="{StaticResource Tertiary}" Offset="1.0" />
    </LinearGradientBrush>
</ResourceDictionary>