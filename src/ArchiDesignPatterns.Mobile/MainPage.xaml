                        </Border>
                        <VerticalStackLayout Grid.Column="1" Spacing="2">
                            <Label Text="{x:Static resx:Strings.MainPage_ArchitecturesTitle}"
                                   FontAttributes="Bold"
                                   Style="{StaticResource BodyMedium}" />
                            <Label Text="{x:Static resx:Strings.MainPage_ArchitecturesTitle2}"
                                   Style="{StaticResource Caption}" />
                        </VerticalStackLayout>
                    </Grid>

                    <!-- Learning Item 5 -->
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                        <Border BackgroundColor="{StaticResource SOLIDPrinciple}"
                                WidthRequest="32" HeightRequest="32"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 16">
                            <Label Text="âœ“" FontSize="18" TextColor="White"
