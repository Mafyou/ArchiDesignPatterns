                                   TextColor="{StaticResource SOLIDPrinciple}"
                                   HorizontalTextAlignment="Center" />
                            <Label Text="{x:Static resx:Strings.MainPage_SOLIDLabel}"
                                   FontSize="12" FontAttributes="Bold"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />
                        </VerticalStackLayout>
                    </Border>
                </Grid>

                <!-- What You'll Learn Section -->
                <VerticalStackLayout Spacing="12">
                    <Label Text="{x:Static resx:Strings.MainPage_WhatYouLearnTitle}"
                           Style="{StaticResource SubTitle}" />
                    
                    <!-- Learning Item 1 -->
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                        <Border BackgroundColor="{StaticResource CreationalPattern}"
                                WidthRequest="32" HeightRequest="32"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 16">
                            <Label Text="âœ“" FontSize="18" TextColor="White"
                                   HorizontalOptions="Center" VerticalOptions="Center" />
                        </Border>
                        <VerticalStackLayout Grid.Column="1" Spacing="2">
                            <Label Text="{x:Static resx:Strings.MainPage_CreationalPatternsTitle}"
                                   FontAttributes="Bold"
                                   Style="{StaticResource BodyMedium}" />
                            <Label Text="{x:Static resx:Strings.MainPage_CreationalPatternsDesc}"
                                   Style="{StaticResource Caption}" />
                        </VerticalStackLayout>
                    </Grid>

                    <!-- Learning Item 2 -->
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                        <Border BackgroundColor="{StaticResource StructuralPattern}"
                                WidthRequest="32" HeightRequest="32"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 16">
                            <Label Text="âœ“" FontSize="18" TextColor="White"
                                   HorizontalOptions="Center" VerticalOptions="Center" />
                        </Border>
                        <VerticalStackLayout Grid.Column="1" Spacing="2">
                            <Label Text="{x:Static resx:Strings.MainPage_StructuralPatternsTitle}"
                                   FontAttributes="Bold"
                                   Style="{StaticResource BodyMedium}" />
                            <Label Text="{x:Static resx:Strings.MainPage_StructuralPatternsDesc}"
                                   Style="{StaticResource Caption}" />
                        </VerticalStackLayout>
                    </Grid>

                    <!-- Learning Item 3 -->
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                        <Border BackgroundColor="{StaticResource BehavioralPattern}"
                                WidthRequest="32" HeightRequest="32"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 16">
                            <Label Text="âœ“" FontSize="18" TextColor="White"
                                   HorizontalOptions="Center" VerticalOptions="Center" />
                        </Border>
                        <VerticalStackLayout Grid.Column="1" Spacing="2">
                            <Label Text="{x:Static resx:Strings.MainPage_BehavioralPatternsTitle}"
                                   FontAttributes="Bold"
                                   Style="{StaticResource BodyMedium}" />
                            <Label Text="{x:Static resx:Strings.MainPage_BehavioralPatternsDesc}"
                                   Style="{StaticResource Caption}" />
                        </VerticalStackLayout>
                    </Grid>

                    <!-- Learning Item 4 -->
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                        <Border BackgroundColor="{StaticResource ArchitecturePattern}"
                                WidthRequest="32" HeightRequest="32"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 16">
                            <Label Text="âœ“" FontSize="18" TextColor="White"
