                                       TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />
                            </VerticalStackLayout>
                            
                            <Label Grid.Column="2" Text="â€º" FontSize="40"
                                   TextColor="{StaticResource Tertiary}"
                                   VerticalOptions="Center" />
                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <!-- Feature Cards Grid -->
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="12" RowSpacing="12">
                    
                    <!-- Patterns Card -->
                    <Border Grid.Column="0" Style="{StaticResource Card}">
                        <VerticalStackLayout Spacing="8" Padding="8">
                            <Label Text="ðŸ“" FontSize="40" HorizontalOptions="Center" />
                            <Label Text="{x:Static resx:Strings.MainPage_PatternsCount}" 
                                   FontSize="32" FontAttributes="Bold"
                                   TextColor="{StaticResource Primary}"
                                   HorizontalTextAlignment="Center" />
                            <Label Text="{x:Static resx:Strings.MainPage_PatternsLabel}"
                                   FontSize="12" FontAttributes="Bold"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />
                        </VerticalStackLayout>
                    </Border>

                    <!-- Architectures Card -->
                    <Border Grid.Column="1" Style="{StaticResource Card}">
                        <VerticalStackLayout Spacing="8" Padding="8">
                            <Label Text="ðŸ›ï¸" FontSize="40" HorizontalOptions="Center" />
                            <Label Text="{x:Static resx:Strings.MainPage_ArchitecturesCount}" 
                                   FontSize="32" FontAttributes="Bold"
                                   TextColor="{StaticResource ArchitecturePattern}"
                                   HorizontalTextAlignment="Center" />
                            <Label Text="{x:Static resx:Strings.MainPage_ArchitecturesLabel}"
                                   FontSize="12" FontAttributes="Bold"
