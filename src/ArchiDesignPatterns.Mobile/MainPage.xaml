<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:ArchiDesignPatterns.Mobile.Resources"
             x:Class="ArchiDesignPatterns.Mobile.MainPage"
             Shell.NavBarIsVisible="True"
             Title="{x:Static resx:Strings.MainPage_Title}">

    <ScrollView>
        <VerticalStackLayout Spacing="0">
            
            <!-- Hero Section -->
            <Border Background="{StaticResource PrimaryGradient}"
                    Padding="32,48,32,32"
                    StrokeThickness="0">
                <VerticalStackLayout Spacing="16" HorizontalOptions="Center">
                    <Image Source="code.png"
                           HeightRequest="120"
                           Aspect="AspectFit"
                           SemanticProperties.Description="Application d'apprentissage des Codes Patterns" />
                    
                    <Label Text="{x:Static resx:Strings.MainPage_AppName}"
                           FontSize="36"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalTextAlignment="Center" />
                    
                    <Label Text="{x:Static resx:Strings.MainPage_Tagline}"
                           FontSize="18"
                           TextColor="White"
                           Opacity="0.9"
                           HorizontalTextAlignment="Center"
                           SemanticProperties.HeadingLevel="Level2" />
                </VerticalStackLayout>
            </Border>

            <!-- Main Content -->
            <VerticalStackLayout Padding="20" Spacing="24">
                
                <!-- Welcome Message -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="{x:Static resx:Strings.MainPage_WelcomeTitle}"
                           Style="{StaticResource Title}" />
                    <Label Text="{x:Static resx:Strings.MainPage_WelcomeDesc}"
                           Style="{StaticResource BodyLarge}"
                           LineBreakMode="WordWrap" />
                </VerticalStackLayout>

                <!-- Quick Access Navigation Cards -->
                <VerticalStackLayout Spacing="16">
                    <Label Text="{x:Static resx:Strings.MainPage_QuickAccessTitle}"
                           Style="{StaticResource SubTitle}" />
                    
                    <!-- Design Patterns Card -->
                    <Border Style="{StaticResource ElevatedCard}">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnDesignPatternsClicked" />
                        </Border.GestureRecognizers>
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="16" Padding="20">
                            <Border Grid.Column="0"
                                    BackgroundColor="{StaticResource Primary}"
                                    WidthRequest="60" HeightRequest="60"
                                    StrokeThickness="0"
                                    VerticalOptions="Center">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="12" />
                                </Border.StrokeShape>
                                <Label Text="ðŸ“" FontSize="32"
                                       HorizontalOptions="Center" VerticalOptions="Center" />
                            </Border>
                            
                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="4">
                                <Label Text="{x:Static resx:Strings.MainPage_DesignPatternsCard}"
                                       Style="{StaticResource SubTitle}" />
                                <Label Text="{x:Static resx:Strings.MainPage_DesignPatternsDesc}"
                                       Style="{StaticResource BodySmall}"
                                       TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />
                            </VerticalStackLayout>
                            
                            <Label Grid.Column="2" Text="â€º" FontSize="40"
                                   TextColor="{StaticResource Primary}"
                                   VerticalOptions="Center" />
                        </Grid>
                    </Border>

                    <!-- Architectures Card -->
                    <Border Style="{StaticResource ElevatedCard}">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnArchitecturesClicked" />
                        </Border.GestureRecognizers>
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="16" Padding="20">
                            <Border Grid.Column="0"
                                    BackgroundColor="{StaticResource ArchitecturePattern}"
                                    WidthRequest="60" HeightRequest="60"
                                    StrokeThickness="0"
                                    VerticalOptions="Center">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="12" />
                                </Border.StrokeShape>
                                <Label Text="ðŸ›ï¸" FontSize="32"
                                       HorizontalOptions="Center" VerticalOptions="Center" />
                            </Border>
                            
                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="4">
                                <Label Text="{x:Static resx:Strings.MainPage_ArchitecturesCard}"
                                       Style="{StaticResource SubTitle}" />
                                <Label Text="{x:Static resx:Strings.MainPage_ArchitecturesDesc}"
                                       Style="{StaticResource BodySmall}"
                                       TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />
                            </VerticalStackLayout>
                            
                            <Label Grid.Column="2" Text="â€º" FontSize="40"
                                   TextColor="{StaticResource ArchitecturePattern}"
                                   VerticalOptions="Center" />
                        </Grid>
                    </Border>

                    <!-- SOLID Principles Card -->
                    <Border Style="{StaticResource ElevatedCard}">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnSOLIDPrinciplesClicked" />
                        </Border.GestureRecognizers>
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="16" Padding="20">
                            <Border Grid.Column="0"
                                    BackgroundColor="{StaticResource SOLIDPrinciple}"
                                    WidthRequest="60" HeightRequest="60"
                                    StrokeThickness="0"
                                    VerticalOptions="Center">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="12" />
                                </Border.StrokeShape>
                                <Label Text="ðŸ”·" FontSize="32"
                                       HorizontalOptions="Center" VerticalOptions="Center" />
                            </Border>
                            
                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="4">
                                <Label Text="{x:Static resx:Strings.MainPage_SOLIDCard}"
                                       Style="{StaticResource SubTitle}" />
                                <Label Text="{x:Static resx:Strings.MainPage_SOLIDDesc}"
                                       Style="{StaticResource BodySmall}"
                                       TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />
                            </VerticalStackLayout>
                            
                            <Label Grid.Column="2" Text="â€º" FontSize="40"
                                   TextColor="{StaticResource SOLIDPrinciple}"
                                   VerticalOptions="Center" />
                        </Grid>
                    </Border>

                    <!-- Quiz Card -->
                    <Border Style="{StaticResource ElevatedCard}">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnQuizClicked" />
                        </Border.GestureRecognizers>
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="16" Padding="20">
                            <Border Grid.Column="0"
                                    BackgroundColor="{StaticResource Tertiary}"
                                    WidthRequest="60" HeightRequest="60"
                                    StrokeThickness="0"
                                    VerticalOptions="Center">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="12" />
                                </Border.StrokeShape>
                                <Label Text="ðŸŽ¯" FontSize="32"
                                       HorizontalOptions="Center" VerticalOptions="Center" />
                            </Border>
                            
