                        <VerticalStackLayout Grid.Column="1" Spacing="2">
                            <Label Text="{x:Static resx:Strings.MainPage_SOLIDTitle}"
                                   FontAttributes="Bold"
                                   Style="{StaticResource BodyMedium}" />
                            <Label Text="{x:Static resx:Strings.MainPage_SOLIDTitle2}"
                                   Style="{StaticResource Caption}" />
                        </VerticalStackLayout>
                    </Grid>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
